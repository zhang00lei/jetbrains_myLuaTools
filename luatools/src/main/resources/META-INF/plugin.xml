<idea-plugin>
    <id>com.johnrey.luatools.luatools</id>
    <name>luatools</name>
    <vendor email="johnreygood@gmail.com" url="https://www.cnblogs.com/Yellow0-0River/">johnrey</vendor>

    <description>
        个人开发工具：lua点方法与冒号方法互相转换，便于在Jetbrains中开发使用。
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="luatools.colonFunc" class="ToColon" text="转冒号方法" description="点方法转冒号方法">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="ctrl alt SEMICOLON" keymap="$default"/>
        </action>
        <action id="luatools.dotFunc" class="ToDot" text="转点方法" description="冒号方法转点方法">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="ctrl alt PERIOD" keymap="$default"/>
        </action>
        <action id="luatools.allToColonFunc" class="AllToColon" text="转冒号方法" description="点方法转冒号方法">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="luatools.allToDotFunc" class="AllToDot" text="转点方法" description="冒号方法转点方法">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

    </actions>
</idea-plugin>